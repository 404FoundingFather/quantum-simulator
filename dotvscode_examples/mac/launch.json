{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Quantum Simulator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/quantum_simulator",
            "args": ["--debug"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.inline-breakpoint-strategy always",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Quantum Simulator (Debug)"
        }
    ]
}