# EditorConfig for Quantum Mechanics Simulation (QMSim)
# https://editorconfig.org/

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C++ source files
[*.{cpp,h,hpp}]
indent_size = 4

# CMake files
[{CMakeLists.txt,*.cmake}]
indent_size = 2

# JSON, YAML files
[*.{json,yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles require tab indentation
[Makefile]
indent_style = tab

# Python files
[*.py]
indent_size = 4

# GLSL shader files
[*.{glsl,vert,frag}]
indent_size = 4

# Config files
[*.{ini,conf}]
indent_size = 2